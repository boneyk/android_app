<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toursList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b8cbe9"
    tools:context=".activities.SignActivity">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:textColor="#1f1317"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Регистрация" />

    <EditText
        android:id="@+id/user_login"
        android:background="@drawable/edit_text"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="#6a6a6a"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:textColor="#1f1317"
        android:hint="  Login" />

    <EditText
        android:id="@+id/user_email"
        android:background="@drawable/edit_text"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="#6a6a6a"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:textColor="#1f1317"

        android:hint="  Email" />

    <EditText
        android:id="@+id/user_password"
        android:background="@drawable/edit_text"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="#6a6a6a"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:textColor="#1f1317"

        android:hint="  Password" />

    <EditText
        android:id="@+id/user_password_copy"
        android:background="@drawable/edit_text"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="#6a6a6a"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:textColor="#1f1317"

        android:hint="  Repeat the password" />

    <Button
        android:id="@+id/button_reg"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:textSize="19sp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:backgroundTint="#3C5A5C"
        android:text="Зарегистрироваться" />

    <TextView
        android:id="@+id/link_to_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:text="Войти в аккаунт"
        android:textColor="#1f1317"
        android:textSize="21sp"
        android:textStyle="bold" />


</LinearLayout>