<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/tour_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:paddingBottom="20dp">


    <ImageView
        android:id="@+id/tour_list_image"
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/egyptanoubis" />

    <TextView
        android:id="@+id/tour_list_country"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="TextView"
        android:textSize="30sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tour_list_tour_type"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textSize="17sp"
            android:textStyle="italic"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/tour_list_city"
            android:layout_toRightOf="@+id/tour_list_tour_type"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:gravity="right"
            android:textSize="17sp"
            android:textStyle="italic"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tour_list_price"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:gravity="end"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tour_list_button"
            android:layout_marginLeft="10dp"
            android:layout_width="170dp"
            android:layout_gravity="center"
            android:backgroundTint="#3C5A5C"
            android:layout_height="wrap_content"
            android:text="Смотреть" />

        <Button
            android:id="@+id/del_button_list"
            android:layout_toRightOf="@+id/tour_list_button"
            android:layout_width="170dp"
            android:layout_marginLeft="13dp"
            android:layout_gravity="center"
            android:backgroundTint="#3C5A5C"
            android:layout_height="wrap_content"
            android:text="Купить" />

    </RelativeLayout>
</LinearLayout>